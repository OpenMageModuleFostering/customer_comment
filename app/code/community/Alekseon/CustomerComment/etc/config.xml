<?xml version="1.0"?><!--/** * @author    Marcin Frymark * @email     contact@alekseon.com * @company   Alekseon * @website   www.alekseon.com */--><config>    <modules>        <Alekseon_CustomerComment>            <version>0.1.0</version>        </Alekseon_CustomerComment>    </modules>    <global>        <models>            <alekseon_customerComment>                <class>Alekseon_CustomerComment_Model</class>                <resourceModel>alekseon_customercomment_resource</resourceModel>            </alekseon_customerComment>            <alekseon_customercomment_resource>                <class>Alekseon_CustomerComment_Model_Resource</class>				<entities>                    <comment>                        <table>alekseon_customercomment_comment</table>                    </comment>                </entities>            </alekseon_customercomment_resource>        </models>        <blocks>            <alekseon_customerComment>                <class>Alekseon_CustomerComment_Block</class>            </alekseon_customerComment>            <adminhtml>                <rewrite>                    <sales_order_view_info>Alekseon_CustomerComment_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>                </rewrite>            </adminhtml>        </blocks>        <helpers>            <alekseon_customerComment>                <class>Alekseon_CustomerComment_Helper</class>            </alekseon_customerComment>        </helpers>         <resources>            <alekseon_customercomment_setup>                <setup>                    <module>Alekseon_CustomerComment</module>                    <class>Mage_Core_Model_Resource_Setup</class>                </setup>            </alekseon_customercomment_setup>        </resources>     </global>    <adminhtml>        <layout>            <updates>                <alekseon_customerComment>                    <file>alekseon/customerComment.xml</file>                </alekseon_customerComment>            </updates>        </layout>         <events>            <core_block_abstract_to_html_before>                <observers>                    <alekseon_customerComment>                        <class>alekseon_customerComment/observer</class>                        <method>addCustomerCommentColumn</method>                    </alekseon_customerComment>                </observers>            </core_block_abstract_to_html_before>            <controller_action_predispatch>                <observers>                    <alekseon_adminNotification>                        <class>alekseon_customerComment/alekseonAdminNotification_observer</class>                        <method>preDispatch</method>                    </alekseon_adminNotification>                </observers>            </controller_action_predispatch>        </events>    </adminhtml>    <admin>         <routers>            <adminhtml>                <args>                    <modules>                        <alekseon_customerComment before="Mage_Adminhtml">Alekseon_CustomerComment_Adminhtml</alekseon_customerComment>                    </modules>                </args>            </adminhtml>        </routers>    </admin>    <default>        <alekseon_adminNotification>            <general>                <enabled>1</enabled>                <frequency>12</frequency>            </general>        </alekseon_adminNotification>    </default></config>